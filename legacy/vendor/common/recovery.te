recovery_only(`
    # Read files on /sdcard
    allow recovery sdcard_type:dir r_dir_perms;
    allow recovery sdcard_type:file r_file_perms;
    allow recovery vfat:dir r_dir_perms;
    allow recovery vfat:file create_file_perms;
    allow recovery vfat:file rw_file_perms;
    allow recovery system_data_file:file r_file_perms;
    allow recovery system_data_file:dir r_dir_perms;
    allow recovery RIDL_data_file:file r_file_perms;
    allow recovery RIDL_data_file:dir r_dir_perms;
    allow recovery qti_logkit_priv_data_file:file r_file_perms;
    allow recovery qti_logkit_priv_data_file:dir r_dir_perms;
    allow recovery cache_file:dir mounton;
    allow recovery qce_device:chr_file rw_file_perms;
    allow recovery tee_device:chr_file rw_file_perms;
    allow recovery sg_device:chr_file rw_file_perms;
    allow recovery self:capability sys_rawio;
    allow recovery sg_device:chr_file ioctl;
    allow recovery sysfs_dm:dir r_dir_perms;
    allow recovery sysfs_dm:file r_file_perms;
    # Enable adb on configfs devices
    allow recovery configfs:file rw_file_perms;
    allow recovery configfs:dir rw_dir_perms;
    
    # 
    allow recovery sysfs_vibrator:file rw_file_perms;
    allow recovery selinuxfs:file rw_file_perms;
    allow recovery media_rw_data_file:file { setattr rw_file_perms relabelfrom relabelto create };
    allow recovery media_rw_data_file:dir { rw_dir_perms add_name };
    allow recovery sysfs_usbpd_device:dir { r_dir_perms search};
    allow recovery sysfs_usbpd_device:lnk_file r_file_perms;
    allow recovery sysfs_usbpd_device:file rw_file_perms;
    r_dir_file(recovery, sysfs_usb_supply);

    allow recovery default_prop:property_service set;
    allow recovery self:process execmem;
    allow recovery ashmem_device:chr_file execute;
    allow recovery rootfs:dir rw_dir_perms;
    #allow recovery {
    #    vndservice_contexts_file
    #    sepolicy_file
    #    service_contexts_file
    #    seapp_contexts_file
    #    hwservice_contexts_file
    #    nonplat_service_contexts_file
    #}:file { getattr };
    allow recovery vndservice_contexts_file:file r_file_perms;
    allow recovery sepolicy_file:file r_file_perms;
    allow recovery service_contexts_file:file r_file_perms;
    allow recovery seapp_contexts_file:file r_file_perms;
    allow recovery hwservice_contexts_file:file r_file_perms;
    allow recovery nonplat_service_contexts_file:file r_file_perms;

    allow recovery wifi_prop:file r_file_perms;
    allow recovery system_radio_prop:property_service set;

    allow recovery rootfs:dir rw_dir_perms;

    set_prop(recovery, ffs_prop);
    get_prop(recovery, vendor_boot_mode_prop)
')
